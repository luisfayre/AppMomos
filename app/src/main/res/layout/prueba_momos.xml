<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo3">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:elevation="5dp"
        android:id="@+id/CardViewPerfil"
        app:cardElevation="2dp"
        app="@android:color/white"
        android:innerRadius="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Elige una opción"
                android:textAlignment="center"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Imagen"
        android:id="@+id/button_subirImg"
        android:backgroundTint="@color/colorPrimaryDarkMMA"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@+id/button_mostrarImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver memes"
        android:onClick="Registro"
        android:backgroundTint="@color/colorPrimaryDarkMMA"
        android:textColor="@color/cardview_light_background"
        android:id="@+id/button_mostrarImg"
        android:layout_marginTop="149dp"
        android:layout_alignTop="@+id/CardViewPerfil"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:onClick="salir"
        android:id="@+id/button_Salir"
        android:backgroundTint="@color/colorPrimaryDarkMMA"
        android:textColor="@color/cardview_light_background"
        android:layout_alignBottom="@+id/CardViewPerfil"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
